
@* this functions sort of like a "using" statement, tells application to reference this db when "model" is called *@
@model IEnumerable<wardrobeProject_test1.Models.Tops>

@{
    ViewBag.Title = "Index";
   
}
<h2>Tops</h2>

@*Generate table headers*@
<div class="container">
    <p>
        @Html.ActionLink("Add To Collection", "Create")
    </p>
    <div class="row">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nickname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Photo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Color)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Season)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Occasion)
                </th>
                <th></th>
            </tr>

            @* for-loop cycles through db and writes display name of property and value.. one per key *@
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nickname)
                    </td>
                    <td>
                        @* restric size of image to 100x100 so it fits well in table layout *@
                        <img src="@Url.Content(item.Photo)" style="height:100px; width:100px"/>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Color)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Season)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Occasion)
                    </td>
                    <td>
                        @* links to edit or delete record *@
                        @Html.ActionLink("Edit", "Edit", new { id = item.TopsID }) |
                       
                        @Html.ActionLink("Delete", "Delete", new { id = item.TopsID })
                    </td>
                </tr>
            }

        </table>
    </div>
  
    @* calls on the create ActionResult of Tops db *@
        <p>
            @Html.ActionLink("Add To Collection", "Create")
        </p>
</div>




