
@model IEnumerable<wardrobeProject_test1.Models.Bottom>
@{
    ViewBag.Title = "Manage";
}

<h2>Bottoms</h2>
<div class="container">
    <p>
        @Html.ActionLink("Add to Collection", "Create")
    </p>
    <div class="row">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nickname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Photo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Color)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Season)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Occasion)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nickname)
                    </td>
                    <td>
                        <img src="@Url.Content(item.Photo)" style="height:100px; width:100px" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Color)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Season)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Occasion)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.BottomID }) |

                        @Html.ActionLink("Delete", "Delete", new { id = item.BottomID })
                    </td>
                </tr>
            }

        </table>
    </div>

    <p>
        @Html.ActionLink("Add to Collection", "Create")
    </p>

</div>